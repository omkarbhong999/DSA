

// Pyramid printing using loop



#include <iostream>
using namespace std;
int main() {
    int i,j;

    
    for(i = 0;i<5;i++){
        for(j = 0;j<i;j++){
            cout<<"*";
        }
        cout<<endl;
    } 
    
    return 0;
}


// Reverse Pyramid printing

#include <iostream>
using namespace std;
int main() {
    int i,j;

    
    for(i = 5;i>=0;i--){
        for(j = 0;j<i;j++){
            cout<<"*";
        }
        cout<<endl;
    } 
    
    return 0;
}

//Square using star




#include <iostream>
using namespace std;
int main() {
    // Write C++ code here

int i,j;

for(i=0;i<4;i++){
    for(j=0;j<5;j++){
        cout<<"*";
    }
    cout<<endl;
}

    return 0;
}

// Number pyramid 

#include <iostream>
using namespace std;
int main() {
    // Write C++ code here

int i,j,num=0;

for(i=1;i<6;i++){
    for(j=1;j<i;j++){
        cout<<num;
        num++;
    }
    cout<<endl;
}

    return 0;
}

